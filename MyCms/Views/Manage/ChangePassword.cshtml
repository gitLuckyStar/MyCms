@model ChangePasswordViewModel
@{
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
    ViewData["Title"] = "ChangePassword";
}

<div class="card shadow-lg border-0 rounded-lg mt-5">
    <div class="card-header"><h3 class="text-center font-weight-light my-4">تغییر رمز عبور</h3></div>
    <div class="card-body">
        @if (ViewBag.Message != null)
        {
            <div class="alert alert-dismissible alert-success">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                <p class="mb-0">@ViewBag.Message</p>
            </div>

        }
        <form asp-action="ChangePassword" method="post">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <label asp-for="CurrentPassword" class="control-lable"></label>
            <div class="col-md-12">
                <input asp-for="CurrentPassword" class="form-control" />
                <span asp-validation-for="CurrentPassword" class="text-danger"></span>
            </div>

            <label asp-for="NewPassword" class="Control-lable"></label>
            <div class="col-md-12">
                <input asp-for="NewPassword" class="form-control" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <label asp-for="ConfirmPassword" class="Control-lable"></label>
            <div class="col-md-12">
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group mt-3">
                <button type="submit" class="btn btn-success btn-block">بروزرسانی</button>
            </div>
        </form>
    </div>
</div>

