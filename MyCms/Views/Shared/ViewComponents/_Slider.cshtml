@model IEnumerable<DataLayer.Page>


<ol class="breadcrumb alert-secondary shadow-sm">
    <li class="breadcrumb-item active">انتخاب سردبیر</li>
</ol>

<div class="card shadow-lg">
    <div class="carousel slide carousel-fade" data-ride="carousel" id="CarouselTest">
        <div class="carousel-inner">

            <div class="carousel-item active img-thumbnail">
                <div class="row">
                    <div class="col-lg-7 col-md-6 px-3" style="min-height: 200px">
                        <div class="card-block px-6">
                            <h5 class="card-text">محصولات پیشنهادی</h5>
                            <p class="card-text">معرفی بهترین و با کیفیت ترین محصولات باقیمت و شرایط عالی و مناسب از فروشگاه های مختلف در سراسر کشور </p>
                        </div>
                    </div>
                    <div class="col-lg-5 col-md-6">
                        <img class="d-block w-100 img-po-slider " src="~/header-bg.jpg">
                    </div>
                    <a href="#" class="stretched-link"></a>
                </div>
            </div>
            @if (Model != null)
            {
                @foreach (var item in Model)
                {
                    <div class="carousel-item img-thumbnail">
                        <div class="row">
                            <div class="col-lg-7 col-md-6 px-3" style="min-height: 200px">
                                <div class="card-block px-6">
                                    <h5 class="card-text">@item.PageTitle</h5>
                                    <p class="card-text">@item.ShortDescription</p>
                                </div>

                            </div>
                            <div class="col-lg-5 col-md-6">
                                <img class="d-block w-100 img-po-slider" src="~/uploads/@item.ImageName">
                            </div>
                            <a href="~/News/ShowNews/@item.PageID" class="stretched-link"></a>
                        </div>
                    </div>
                }
            }
        </div>
        <a class="carousel-control-prev" href="#CarouselTest" role="button" data-slide="next">
            <span class="btn-dark badge-pill d-none d-lg-block" aria-hidden="true"> < </span>
        </a>
        <a class="carousel-control-next" href="#CarouselTest" role="button" data-slide="prev">
            <span class="btn-dark badge-pill d-none d-lg-block" aria-hidden="true"> > </span>
        </a>

    </div>
</div>
<br />


