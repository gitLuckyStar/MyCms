@model RegisterViewModel
@{
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
    ViewData["Title"] = "Register";
}

<div class="card shadow-lg border-0 rounded-lg mt-5">
    <div class="card-header"><h3 class="text-center font-weight-light my-4">ثبت نام</h3></div>
    <div class="card-body">
        <form asp-action="Register" method="post">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>

            @if (ViewData["Message"] != null)
            {
                <div class="alert alert-dismissible alert-warning">
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                    <p class="mb-0">@ViewData["Message"]</p>
                </div>
            }

            <label asp-for="UserName" class="col-md-4 control-lable"></label>
            <div class="col-md-12">
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <label asp-for="Email" class="col-md-4 control-lable"></label>
            <div class="col-md-12">
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <label asp-for="Password" class="col-md-4 Control-lable"></label>
            <div class="col-md-12">
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <label asp-for="ConfirmPassword" class="col-md-4 Control-lable"></label>
            <div class="col-md-12">
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <div class="g-recaptcha" data-sitekey="6LekaaQpAAAAABVNFL4rc6XxT4FejVHJNVbt782Q"></div>
                <span class="text-danger">@ViewBag.GreCaptcha</span>
            </div>
            <br />
            <a asp-action="Login">حساب دارید؟ اینجا کلیک کنید</a>
            <div class="form-group mt-3">
                <button type="submit" class="btn btn-success btn-block">ثبت نام</button>
            </div>

        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}