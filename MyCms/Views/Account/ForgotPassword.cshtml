@model ForgotPasswordViewModel
@{
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
    ViewData["Title"] = "ForgotPassword";
}

<div class="card shadow-lg border-0 rounded-lg mt-5">
    <div class="card-header"><h3 class="text-center font-weight-light my-4">فراموشی رمز عبور</h3></div>
    <div class="card-body">
        <form asp-action="ForgotPassword" method="post">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            @if (ViewData["Message"] != null)
            {
                <div class="alert alert-dismissible alert-warning">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                <p class="mb-0">@ViewData["Message"]</p>
                </div>
            }
            <label asp-for="Email" class="control-lable"></label>
            <div class="col-md-12">
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <button type="submit" class="btn btn-success btn-block">ارسال</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}